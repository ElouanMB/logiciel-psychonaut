{
  "name": "logiciel-psychonaut",
  "version": "1.0.0",
  "private": true,
  "type": "commonjs",
  "description": "Scripts pour récupérer des pages (publiques/privées) du forum Psychonaut (XenForo)",
  "scripts": {
    "fetch:public": "node scripts/fetch-psychonaut-html.js",
    "fetch:xenforo": "node scripts/xenforo-login-fetch.js",
    "fetch:demande": "node scripts/xenforo-login-fetch.js --target /forums/demandes.160",
    "analyze:local": "node scripts/analyze-threads-local.js --forum ./page-psychonaut.html --psy ./page-psychoactif.html",
    "analyze:online": "node scripts/analyze-threads-online.js --out ./results/demande-report.json",
    "analyze:online:first": "node scripts/analyze-threads-online.js --pages 1 --out ./results/demande-report.json",
    "start:ui": "node server.js"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "axios-cookiejar-support": "^6.0.2",
    "cheerio": "^1.0.0-rc.12",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "tough-cookie": "^4.1.4"
  }
}
